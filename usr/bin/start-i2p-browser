#!/usr/bin/env bash

if [ ! -d "$HOME/.i2pb/profile.i2p" ]; then
    echo 'copying profile.i2p to home folder'
    cp -rv /var/lib/tb-profile-i2p/profile.i2p \
        "$HOME/.i2pb/profile.i2p"
fi

echo 'linking profile folder to i2p browser.'

ln -sf "$HOME/.i2pb/profile.i2p" \
    "$HOME/.i2pb/Browser/TorBrowser/Data/Browser/profile.i2p"

ls -lah "$HOME/.i2pb/" "$HOME/.i2pb/Browser/TorBrowser/Data/Browser/profile.i2p"

echo 'linking start-i2p-browser to the modified TBB folder'
ln -sf /var/lib/tb-profile-i2p/start-i2p-browser "$HOME/.i2pb/Browser/start-i2p-browser"

cd "$HOME/.i2pb/Browser/" || exit

cat "$HOME/.i2pb/Browser/start-i2p-browser"

#"$HOME/.i2pb/Browser/start-i2p-browser"

